{
  "name": "kintsugi-x",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && node generateTypes.js && tsc",
    "init": "node db/init.js",
    "db:migrate": "npx sqd db migrate",
    "schema:reset": "",
    "processor:migrate": "echo skip",
    "processor:start": "node lib/processor.js",
    "processor:docker-run": "bash scripts/docker-run.sh",
    "query-node:start": "squid-graphql-server",
    "lint": "npm run lint:prod -- --fix",
    "lint:prod": "eslint . --ext .ts --ignore-path .gitignore --max-warnings 0",
    "gen:json": "node indexer/generateTypes.js",
    "gen:explore:kintsugi": "squid-substrate-metadata-explorer --chain wss://api-kusama.interlay.io/parachain --archive https://api-kusama.interlay.io/gateway-graphql/v1/graphql --out indexer/kintsugi.chainVersions.json",
    "gen:types:kintsugi": "squid-substrate-typegen typegen.json",
    "gen:code": "sqd codegen",
    "gen:distributables": "cp indexer/types.json distributable/ && cp schema.graphql distributable/",
    "db:create": "sqd db create",
    "db:drop": "sqd db drop",
    "db:create-migration": "sqd db create-migration",
    "db:revert": "sqd db revert",
    "db:reset": "sqd db drop && sqd db create && sqd db migrate"

  },
  "dependencies": {
    "@subsquid/archive-registry": "^0.0.6",
    "@subsquid/cli": "^0.4.0",
    "@subsquid/graphql-server": "^0.3.0",
    "@subsquid/ss58": "^0.1.0",
    "@subsquid/substrate-processor": "^0.7.2",
    "dotenv": "^16.0.0",
    "pg": "^8.7.3",
    "typeorm": "^0.2.41",
    "@polkadot/util-crypto": "^7.9.2"
  },
  "devDependencies": {
    "@interlay/interbtc-types":"^1.6.0",
    "@subsquid/substrate-metadata-explorer": "^0.0.8",
    "@subsquid/substrate-typegen": "^0.4.3",
    "@types/node": "^16.11.27",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "typescript": "~4.6.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2"
  }
}
